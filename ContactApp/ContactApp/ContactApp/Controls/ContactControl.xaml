<UserControl x:Class="ContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="10">
            <TextBlock x:Name="txtName"  Margin="2" Text="Name l" FontSize="20" FontWeight="Bold"></TextBlock>
            <TextBlock x:Name="txtEmail"   Margin="2" Text="{Binding Email}" FontSize="15" Foreground="DodgerBlue"></TextBlock>
            <TextBlock x:Name="txtPhone" Margin="2" Text="{Binding Phone}" FontSize="15" FontStyle="Italic"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
